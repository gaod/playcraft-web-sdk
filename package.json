{
  "name": "playcraft",
  "version": "1.12.1",
  "module": "dist/playcraft.module.js",
  "main": "dist/playcraft.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "plugins.js",
    "core.js",
    "react.js",
    "modules.js"
  ],
  "exports": {
    "./core": {
      "module": "./core.js"
    },
    "./modules": {
      "module": "./modules.js"
    },
    "./plugins": {
      "module": "./plugins.js"
    },
    "./react": {
      "module": "./react.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.kkinternal.com/playback/web-playcraft"
  },
  "scripts": {
    "develop": "next",
    "start": "next start",
    "test": "jest --coverage",
    "watch:test": "jest --watch",
    "build": "rollup -c && cp index.d.ts react.d.ts modules.d.ts plugins.d.ts dist/ && cp sdk.js npm/index.js && cp sdk.esm.js npm/index.esm.js",
    "build-sample": "rollup -c && next build && next export",
    "release": "standard-version -a",
    "now-build": "mv next-build .next || echo 'Not a next build, skip moving'"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/eslint-plugin": "^7.14.5",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/register": "^7.16.0",
    "@babel/runtime": "^7.16.3",
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@emotion/babel-plugin": "^11.1.2",
    "@emotion/eslint-plugin": "^11.5.0",
    "@material-ui/core": "^4.12.3",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "amplitude-js": "^5.8.0",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.3",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^19.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-compat": "^3.13.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^5.1.3",
    "jest": "^27.3.1",
    "lint-staged": ">=10",
    "msw": "^0.35.0",
    "next": "12.0.4",
    "node-fetch": "^2.6.6",
    "prettier": "^2.4.1",
    "prop-types": "^15.7.2",
    "react": "17.0.2",
    "react-cool-form": "^0.4.1",
    "react-dom": "17.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-includepaths": "^0.2.4",
    "standard-version": "^9.3.2",
    "xmldom": "^0.6.0"
  },
  "dependencies": {
    "@emotion/css": "^11.5.0",
    "@emotion/react": "^11.6.0",
    "@juggle/resize-observer": "^3.3.1",
    "axios": "^0.24.0",
    "bitmovin-player": "^8.75.0",
    "classnames": "^2.2.6",
    "clipboard-polyfill": "^3.0.1",
    "core-js": "^3.22.8",
    "dlv": "^1.1.3",
    "mitt": "^3.0.0",
    "raf": "^3.4.1",
    "react-cool-dimensions": "^2.0.7",
    "react-cool-onclickoutside": "1.7.0",
    "shaka-player": "^4.0.0",
    "ua-parser-js": "^1.0.2",
    "zustand": "^3.6.5"
  },
  "peerDependencies": {
    "@babel/runtime": "^7.0.0",
    "react": ">=16.14.0",
    "react-dom": ">=16.14.0"
  },
  "peerDependenciesMeta": {
    "@babel/runtime": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "shaka-player": {
      "optional": true
    }
  },
  "browserslist": [
    "IE 11"
  ],
  "babel": {
    "presets": [
      [
        "@babel/react",
        {
          "runtime": "automatic"
        }
      ]
    ],
    "plugins": [
      "@emotion/babel-plugin",
      "@babel/proposal-class-properties",
      "@babel/proposal-nullish-coalescing-operator",
      "@babel/proposal-optional-chaining"
    ],
    "env": {
      "test": {
        "plugins": [
          "@babel/transform-modules-commonjs"
        ]
      }
    }
  },
  "eslintConfig": {
    "ignorePatterns": [
      "/build/**",
      "/dist/**",
      "/demo/**/*.bundle.*",
      "/plugins.js",
      "/core.js",
      "/react.js",
      "/modules.js"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "@babel",
      "@emotion/eslint-plugin",
      "prettier"
    ],
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:compat/recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "rules": {
      "no-unused-expressions": "warn",
      "no-nested-ternary": "warn",
      "consistent-return": "warn",
      "import/no-extraneous-dependencies": "warn",
      "import/prefer-default-export": "warn",
      "jsx-a11y/click-events-have-key-events": "warn",
      "jsx-a11y/no-noninteractive-element-to-interactive-role": [
        "warn",
        {
          "ul": [
            "listbox",
            "menu",
            "menubar",
            "radiogroup",
            "tablist",
            "tree",
            "treegrid"
          ],
          "ol": [
            "listbox",
            "menu",
            "menubar",
            "radiogroup",
            "tablist",
            "tree",
            "treegrid"
          ],
          "li": [
            "menuitem",
            "menuitemradio"
          ]
        }
      ],
      "react/no-array-index-key": "warn",
      "react/forbid-prop-types": "warn",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/function-component-definition": [
        "warn",
        {
          "namedComponents": "arrow-function"
        }
      ],
      "react/react-in-jsx-scope": "off",
      "react/jsx-uses-react": "off",
      "react/jsx-props-no-spreading": "warn",
      "react/require-default-props": "off",
      "react-hooks/exhaustive-deps": "warn"
    },
    "settings": {
      "polyfills": [
        "Promise",
        "fetch",
        "URL"
      ],
      "import/resolver": {
        "webpack": {
          "config": {
            "resolve": {
              "extensions": [
                "",
                ".js",
                ".jsx",
                ".ts",
                ".tsx",
                "..."
              ],
              "modules": [
                "node_modules",
                "src"
              ],
              "alias": {
                "playcraft/react": "react.js",
                "playcraft/modules": "modules.js",
                "playcraft/plugins": "plugins/index.js",
                "playcraft/core": "playerCore/index.js",
                "playcraft/sdk": "sdk/index.jsx",
                "playcraft": "index.js"
              }
            }
          }
        }
      },
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "verbose": true,
    "modulePaths": [
      "src/"
    ],
    "testMatch": [
      "<rootDir>/test/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/mocks/"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/sample/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/test/mocks",
      "src/plugins/shaka"
    ],
    "testEnvironment": "node",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "cobertura"
    ]
  },
  "standard-version": {
    "scripts": {
      "postbump": "yarn build && git add dist plugins.js core.js react.js modules.js"
    }
  }
}
